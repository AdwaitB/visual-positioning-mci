<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/y_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="y_acc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_acc" />

    <TextView
        android:id="@+id/z_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="z_acc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/y_acc"
        app:layout_constraintTop_toBottomOf="@+id/time_acc" />

    <TextView
        android:id="@+id/x_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x_acc"
        app:layout_constraintEnd_toStartOf="@+id/y_acc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_acc" />

    <Button
        android:id="@+id/toggleBucketing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="START"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dumpData"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No file created! Press the button below."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time" />

    <Button
        android:id="@+id/checkfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="CHECK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dumpData" />

    <Button
        android:id="@+id/dumpData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="DUMP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/checkfile"
        app:layout_constraintStart_toEndOf="@+id/toggleBucketing" />

    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/light" />

    <TextView
        android:id="@+id/x_gyro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x_gyro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_gyro" />

    <TextView
        android:id="@+id/y_gyro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="y_gyro"
        app:layout_constraintEnd_toStartOf="@+id/z_gyro"
        app:layout_constraintStart_toEndOf="@+id/x_gyro"
        app:layout_constraintTop_toBottomOf="@+id/time_gyro" />

    <TextView
        android:id="@+id/z_gyro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="z_gyro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/y_gyro"
        app:layout_constraintTop_toBottomOf="@+id/time_gyro" />

    <TextView
        android:id="@+id/light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_light" />

    <TextView
        android:id="@+id/time_acc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="time_acc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_gyro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="time_gyro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/y_acc" />

    <TextView
        android:id="@+id/time_light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="time_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/y_gyro" />

</androidx.constraintlayout.widget.ConstraintLayout>